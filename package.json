{
    "name": "spaghettimap",
    "private": true,
    "version": "0.1.0",
    "description": "AI-powered Python IDE for understanding legacy codebases",
    "main": "electron/main.js",
    "scripts": {
        "dev": "npm run dev:frontend",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && python -m uvicorn main:app --port 8000 --reload",
        "electron": "electron .",
        "electron:dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"wait-on http://localhost:5173 && electron .\"",
        "build": "cd frontend && npm run build",
        "start": "npm run build && electron ."
    },
    "devDependencies": {
        "concurrently": "^9.1.0",
        "electron": "^33.2.0",
        "wait-on": "^8.0.1"
    }
}